struct PixelInputType
{
	float4 position : SV_POSITION;
	float4 depthPosition : TEXTURE0;
};

float4 PS(PixelInputType input) : SV_TARGET
{
	// Получаем значение глубины пикселя деля Z пикселя глубины на гомогенную координату W
	// Делением на w мы переводим z координату из однородных в декартовы, 
	// результатом данной операции будет число в диапазоне [-1..1].
	// В данном приложении глубина расчитывается относительно источника света
	float depthValue = input.depthPosition.z / input.depthPosition.w;

	//Вместо цвета возвращается значение глубины для текстуры.
	return float4(depthValue, depthValue, depthValue, 1.0f);
}